// En: server/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- ENUMS ---

enum Role {
  ADMIN
  DOCENTE
  ESTUDIANTE
}

enum OTPPurpose {
  VERIFICATION
  PASSWORD_RESET
}

// --- MODELOS ---

model User {
  id         String   @id @default(cuid())
  name       String
  email      String   @unique
  password   String
  role       Role     @default(ESTUDIANTE)
  isVerified Boolean  @default(false)
  createdAt  DateTime @default(now())
  
  // Relaciones
  materials     Material[]
  studentExams  StudentExam[]
  authoredExams Exam[]
  
  // Relaci√≥n con el Historial
  auditLogs     AuditLog[] @relation("AuditActor")
}

model Material {
  id          String   @id @default(cuid())
  title       String
  content     String?
  attachments String[] // Array de URLs
  createdAt   DateTime @default(now())

  author      User     @relation(fields: [authorId], references: [id])
  authorId    String
}

model Exam {
  id        String   @id @default(cuid())
  title     String
  questions Json     
  createdAt DateTime @default(now())

  duration  Int      @default(60)


  author    User     @relation(fields: [authorId], references: [id])
  authorId  String
  assignedTo String[] 
  
  submissions StudentExam[]
}

model StudentExam {
  id          String   @id @default(cuid())
  answers     Json     
  grade       Float?
  feedback    String?
  submitted   Boolean  @default(false)
  submittedAt DateTime @default(now())

  student     User     @relation(fields: [studentId], references: [id])
  studentId   String
  exam        Exam     @relation(fields: [examId], references: [id])
  examId      String
}

model OTP {
  id        String     @id @default(cuid())
  email     String
  code      String
  purpose   OTPPurpose
  expiresAt DateTime
  used      Boolean    @default(false)
}

model AuditLog {
  id        String   @id @default(cuid())
  action    String   
  timestamp DateTime @default(now())
  
  ipAddress String?
  details   Json?
  
  actorId   String   
  targetId  String?

  actor     User     @relation("AuditActor", fields: [actorId], references: [id])
}